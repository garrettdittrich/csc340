<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".proposal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="457dp"
            android:layout_height="103dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="625dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/darker_gray" />

        <Button
            android:id="@+id/button"
            android:layout_width="125dp"
            android:layout_height="59dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="270dp"
            android:layout_marginBottom="628dp"
            android:text="Profile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="123dp"
            android:layout_height="62dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="625dp"
            android:text="Search"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="124dp"
            android:layout_height="61dp"
            android:layout_marginStart="143dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="144dp"
            android:layout_marginBottom="626dp"
            android:text="Requests"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="390dp"
            android:layout_height="535dp"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@color/common_google_signin_btn_text_dark_default" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="58dp"
            android:layout_height="26dp"
            android:text="User id"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="153dp" />

        <EditText
            android:id="@+id/editText5"
            android:layout_width="380dp"
            android:layout_height="31dp"
            android:background="@android:color/background_dark"
            android:backgroundTint="@color/brightBackgroundColor"
            android:ems="10"
            android:inputType="number"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="179dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="70dp"
            android:layout_height="21dp"
            android:text="Location"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="220dp" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="380dp"
            android:layout_height="31dp"
            android:ems="10"
            android:inputType="textPostalAddress"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="241dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="46dp"
            android:layout_height="25dp"
            android:text="Time"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="285dp" />

        <EditText
            android:id="@+id/editText7"
            android:layout_width="382dp"
            android:layout_height="30dp"
            android:ems="10"
            android:inputType="time"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="310dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="382dp"
            android:layout_height="23dp"
            android:text="Date"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="436dp" />

        <TextView
            android:id="@+id/datechosen"
            android:layout_width="88dp"
            android:layout_height="21dp"
            android:text="date chosen"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="415dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:text="Amount"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="470dp" />

        <Button
            android:id="@+id/datepick"
            android:layout_width="129dp"
            android:layout_height="47dp"
            android:text="Choose Date"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="368dp" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="384dp"
            android:layout_height="24dp"
            android:ems="10"
            android:inputType="numberDecimal"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="486dp" />

        <Button
            android:id="@+id/submit"
            android:layout_width="129dp"
            android:layout_height="57dp"
            android:text="Submit"
            tools:layout_editor_absoluteX="136dp"
            tools:layout_editor_absoluteY="527dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>